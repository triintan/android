<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Kode Hewan" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/et_kode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kode Hewan" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama Hewan" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/et_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Hewan" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Kategori Hewan" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/et_kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kategori Hewan" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:id="@+id/btn_insertdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btntampildata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tampil Data" />
    </LinearLayout>
</LinearLayout>
